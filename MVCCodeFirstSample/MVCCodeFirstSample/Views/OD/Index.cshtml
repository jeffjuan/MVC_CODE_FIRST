@model IEnumerable<MVCCodeFirstSample.Models.ODMaster>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>@Html.LabelFor(m=>m.FirstOrDefault().OrderDate)</th>
                        <th>@Html.LabelFor(m => m.FirstOrDefault().Name)</th>
                        <th>@Html.LabelFor(m => m.FirstOrDefault().Phone)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                           <td>
                               @Html.DisplayFor(m=>item.OrderDate)
                           </td>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Phone)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

